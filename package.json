{
  "name": "template-frontend-phaser3-ts",
  "version": "0.1.0",
  "private": true,
  "bugs": {
    "url": "https://github.com/new-objects/template-frontend-phaser3-ts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/new-objects/template-frontend-phaser3-ts.git"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "build:gh-pages": "cross-env DEPLOY_ENV=gh-pages vite build",
    "dev": "node vite-dev.js",
    "dev:host": "vite --host",
    "format": "npm run prettier:fix && npm run lint:fix",
    "gh-deploy": "npm run build:gh-pages && gh-pages -d dist",
    "lint": "npx eslint src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "preview": "npm run build && vite preview"
  },
  "dependencies": {
    "phaser": "^3.87.0"
  },
  "devDependencies": {
    "@new-objects/prettier-config": "^0.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "colors": "^1.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "gh-pages": "^6.2.0",
    "husky": "^8.0.0",
    "postcss": "^8.4.49",
    "qrcode": "^1.5.4",
    "tailwindcss": "^3.4.15",
    "tunnelmole": "^2.2.14",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-plugin-eslint": "^1.8.1"
  }
}